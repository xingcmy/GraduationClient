<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TableLayout
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow
            android:gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/ic_hold"/>
        </TableRow>
        <TableRow>
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15.0dip"
                android:layout_marginTop="6.0dip"
                android:layout_marginRight="15.0dip"
                android:background="@drawable/login_user_password">
                <TextView
                    android:id="@+id/login_text_view_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="用户名:"
                    android:gravity="center_vertical"
                    android:textColor="#000"
                    android:textSize="16sp"/>
                <EditText
                    android:id="@+id/login_edit_user"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:background="#00112233"
                    android:digits="._@0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLIMNOPQRSTUVWXYZ"
                    android:gravity="center_vertical"
                    android:maxLength="11"
                    android:maxLines="1"
                    android:paddingLeft="70.0dip"
                    android:paddingRight="66.0dip"
                    android:singleLine="true"
                    android:textColor="#000"/>
            </RelativeLayout>

        </TableRow>
        <TableRow>
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15.0dip"
                android:layout_marginTop="6.0dip"
                android:layout_marginRight="15.0dip"
                android:background="@drawable/login_user_password">
                <TextView
                    android:id="@+id/login_text_view_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="密    码:"
                    android:textSize="16sp"
                    android:gravity="center_vertical"
                    android:textColor="#000"/>
                <EditText
                    android:id="@+id/login_edit_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:layout_alignParentTop="true"
                    android:background="#00112233"
                    android:digits="._@0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLIMNOPQRSTUVWXYZ"
                    android:gravity="center_vertical"
                    android:maxLength="16"
                    android:maxLines="1"
                    android:paddingLeft="70.0dip"
                    android:paddingRight="66.0dip"
                    android:singleLine="true"
                    android:textColor="#000">

                </EditText>
                <CheckBox
                    android:id="@+id/login_password_checkbox"
                    android:button="@drawable/visibility_off"
                    android:layout_gravity="center"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"/>
            </RelativeLayout>

        </TableRow>
        <TableRow
            android:gravity="center">
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center">
                <Button
                    android:id="@+id/login_layout_button"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="登录"
                    android:background="#00000000"
                    android:textColor="@color/colorAccent"
                    android:textSize="16sp"/>
            </LinearLayout>


        </TableRow>
        <TableRow
            android:gravity="center">
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center">
                <ImageButton
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:src="@drawable/ic_email"
                    android:background="#00000000"
                    android:onClick="LoginEmail"/>
                <ImageButton
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:src="@drawable/ic_phone"
                    android:background="#00000000"
                    android:onClick="LoginPhone"/>
            </LinearLayout>

        </TableRow>
        <TableRow>
            <RelativeLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content">
                <TextView
                    android:id="@+id/login_text_forget"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="忘记密码"
                    android:textColor="@color/colorAccent"
                    android:textSize="20sp"
                    android:layout_alignParentLeft="true"
                    />
                <TextView
                    android:id="@+id/login_text_register"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="用户注册"
                    android:textColor="@color/colorAccent"
                    android:textSize="20sp"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
        </TableRow>
    </TableLayout>

</LinearLayout>
