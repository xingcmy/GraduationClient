<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <com.cn.graduationclient.xingcmyAdapter.HoldTitle
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/add_friend_hold_msg"
        app:type="10"
        app:text="@string/btn_send"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/text_add_friend_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textColor="@color/colorAccent"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@id/text_add_friend_name"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/text_add_friend_sex"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="#000000"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"
                android:id="@+id/text_add_friend_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="填写验证消息"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:gravity="top"
        android:textColor="#000000"
        android:background="@drawable/login_user_password"
        android:id="@+id/edit_text_add_friend_msg"/>

</LinearLayout>
