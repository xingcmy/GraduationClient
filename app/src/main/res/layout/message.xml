<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/message_xml"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/msg_text"
        android:background="@drawable/login_user_password">
        <TextView
            android:id="@+id/text_view_message_id"
            android:layout_width="36dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:scaleType="centerCrop"
            android:textColor="@color/white" />


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/text_view_message_id"
            android:layout_toEndOf="@+id/text_view_message_id"
            android:layout_toLeftOf="@+id/layout_play_controls"
            android:layout_toStartOf="@+id/layout_play_controls"
            android:layout_centerVertical="true"
            >
            <TextView
                android:id="@+id/text_view_message_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:textColor="@color/black"
                android:gravity="center"
                android:textSize="16sp"
                android:singleLine="true"
                tools:text="Saycet"
                />
            <RelativeLayout
                android:id="@+id/relative_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15.0dip"
                android:layout_marginTop="6.0dip"
                android:layout_marginRight="15.0dip"
                android:background="@drawable/login_input">
                <TextView

                    android:id="@+id/text_view_message_msg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="#AB000000"
                    android:textSize="14sp"
                    android:singleLine="true"
                    tools:text="Through the window"
                    />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_play_controls"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            >

            <TextView
                android:id="@+id/text_view_message_name"
                android:layout_width="36dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:scaleType="centerCrop"
                android:textColor="@color/white">

            </TextView>

        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/msg_img"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@drawable/login_user_password">
        <TextView
            android:id="@+id/text_view_message_id_1"
            android:layout_width="36dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:scaleType="centerCrop"
            android:textColor="@color/white"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/text_view_message_id_1"
            android:layout_toEndOf="@+id/text_view_message_id_1"
            android:layout_toLeftOf="@+id/layout_play_controls_1"
            android:layout_toStartOf="@+id/layout_play_controls_1"
            android:layout_centerVertical="true"
            >
            <TextView
                android:id="@+id/text_view_message_time_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:textColor="@color/black"
                android:gravity="center"
                android:textSize="16sp"
                android:singleLine="true"
                tools:text="Saycet"
                />
            <RelativeLayout
                android:id="@+id/relative_img"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15.0dip"
                android:layout_marginTop="6.0dip"
                android:layout_marginRight="15.0dip"
                android:background="@drawable/login_input">
                <ImageView

                    android:id="@+id/text_view_message_msg_img"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/xing"
                    android:gravity="center"
                    tools:text="Through the window"
                    />
            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_play_controls_1"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            >

            <TextView
                android:id="@+id/text_view_message_name_1"
                android:layout_width="36dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:scaleType="centerCrop"
                android:textColor="@color/white">

            </TextView>

        </LinearLayout>
    </RelativeLayout>


</LinearLayout>