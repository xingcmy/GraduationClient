<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.cn.graduationclient.xingcmyAdapter.HoldTitle
        android:id="@+id/holdt_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="REGISTER" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_register_phone"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow>
            <EditText
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="请输入邮箱"/>
        </TableRow>
        <TableRow>
            <EditText
                android:id="@+id/et_emailyan"
                android:layout_weight="3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/b_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="获取验证码"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"/>
        </TableRow>

        <TableRow>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="请设置密码"
                android:id="@+id/ed_register_password"/>

        </TableRow>

        <TableRow>
            <EditText
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="请再一次输入密码"
                android:id="@+id/ed_register_password_too"/>
        </TableRow>

        <TableRow
            android:gravity="center">
            <Button
                android:id="@+id/b_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/colorAccent"
                android:text="注册"/>
        </TableRow>
        <TableRow>
            <include layout="@layout/privacy_policy"/>
        </TableRow>
    </TableLayout>



</LinearLayout>
