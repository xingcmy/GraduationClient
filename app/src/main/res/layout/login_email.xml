<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.cn.graduationclient.xingcmyAdapter.HoldTitle
        android:id="@+id/login_email_hold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="邮箱登录"/>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15.0dip"
        android:layout_marginTop="6.0dip"
        android:layout_marginRight="15.0dip"
        android:background="@drawable/login_user_password">
        <TextView
            android:id="@+id/login_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="邮    箱:"
            android:gravity="center_vertical"
            android:textColor="#000"
            android:textSize="16sp"/>
        <EditText
            android:id="@+id/login_edit_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="#00112233"
            android:digits="._@0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLIMNOPQRSTUVWXYZ"
            android:gravity="center_vertical"
            android:maxLength="50"
            android:maxLines="1"
            android:paddingLeft="70.0dip"
            android:paddingRight="66.0dip"
            android:singleLine="true"
            android:textColor="#000"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:layout_marginLeft="15.0dip"
            android:layout_marginTop="6.0dip"
            android:layout_marginRight="15.0dip"
            android:background="@drawable/login_user_password">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="验证码:"
                android:gravity="center_vertical"
                android:textColor="#000"
                android:textSize="16sp"/>
            <EditText
                android:id="@+id/login_email_edit_yan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:background="#00112233"
                android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLIMNOPQRSTUVWXYZ"
                android:gravity="center_vertical"
                android:maxLength="11"
                android:maxLines="1"
                android:paddingLeft="70.0dip"
                android:paddingRight="66.0dip"
                android:singleLine="true"
                android:textColor="#000"/>

        </RelativeLayout>
        <Button
            android:id="@+id/login_email_button_yan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取验证码"
            android:textColor="#000"
            android:textSize="16sp"/>
    </LinearLayout>
    <Button
        android:id="@+id/login_email_button_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="登录"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:background="@color/colorAccent"/>

</LinearLayout>
